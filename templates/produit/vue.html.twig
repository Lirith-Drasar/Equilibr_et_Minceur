{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
 <section id="ancre_produit" class="service-section">
        <h1 class="produit_title">Mes produits</h1>
        <div class="cards-container">
            {% for produit in produit %}
                <div class="produit-card">
                    <h2 class="produit_subtitle">{{produit.nom}}</h2>
                    <p class="produit-detail">{{produit.image}}</p>    
                    <p class="produit-detail">{{produit.prix}}</p>    
                    <p class="produit-detail">{{produit.description}}</p>    
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
