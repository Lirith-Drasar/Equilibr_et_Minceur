{% extends 'base.html.twig' %}

{% block title %}Equilibr'& Minceur{% endblock %}

{% block body %}

    <!-- Présentation d'équilibr' & Minceur -->
    <section class="presentation_section">
        <div class="presentation_detail">
            <img class="presentation_img" src="../image/logo.png">
            <div class="presentations">
                {% for presentation in presentations %}
                    <div class="presentation_part">
                        {% if presentation.type == 'title' %}
                        <h2 class="presentation_title">{{ presentation.value }}</h2>
                        {% endif %}
                        {% if presentation.type == 'subtitle' %}
                        <h3 class="presentation_subtitle">{{ presentation.value }}</h3>
                        {% endif %}
                        {% if presentation.type == 'paragraph' %}
                        <p class="presentation_paragraph">{{ presentation.value }}</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
