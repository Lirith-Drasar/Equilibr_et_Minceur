{% extends 'base.html.twig' %}

{% block title %}Relaxation index{% endblock %}

{% block body %}
    <h1>Relaxation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for relaxation in relaxations %}
            <tr>
                <td>{{ relaxation.id }}</td>
                <td>{{ relaxation.name }}</td>
                <td>{{ relaxation.description }}</td>
                <td>{{ relaxation.price }}</td>
                <td>
                    <a href="{{ path('relaxation_show', {'id': relaxation.id}) }}">show</a>
                    <a href="{{ path('relaxation_edit', {'id': relaxation.id}) }}">edit</a>
                </td>
            </tr>
